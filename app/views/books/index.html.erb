<!DOCTYPE html>
<html>
<head>
	<title>Books</title>
</head>
<body>

	<h1>Books</h1>


	<table class="book-box">

      <tr>
        <th>title</th>
        <th>body</th>
      </tr>


          <% @books.each do |book| %>
              <tr class="book-title">
                <td><%= link_to book.title, book_path(book) %></td>
              	<td><%= link_to book.body, book_path(book) %></td>
                <td><%= link_to 'show', book_path(book.id) %></td>
                <td><%= link_to 'edit', edit_book_path(book.id) %></td>
                <td><%= link_to 'destroy', book_path(book.id),method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              </tr>
          <% end %>


  </table>
     
<h1>Bookers新規投稿</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>


  <h2>New book</h2>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'create book' %>

 
<% end %>


</body>
</html>
