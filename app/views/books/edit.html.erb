<!DOCTYPE html>
<html>
<head>
	<title>Books edit</title>
</head>
<body>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<div class="book-box clearfix">

	<h1>Books 編集画面</h1>


	<%= form_for(@book) do |f| %>

	<h2>編集画面</h2>
 
    <h4>タイトル</h4>
    <%= f.text_field :title %>
 
    <h4>本文</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'edit book' %>

 
<% end %>

    <%= link_to 'show', book_path %>
    <%= link_to 'back', books_path %>

</body>
</html>
